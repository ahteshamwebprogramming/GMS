@model GMS.Infrastructure.Models.Masters.OperationsDTO
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Operations";
}

<div class="admin_wrapper">
    @Html.Partial("_userManagement/_leftNavigationUserManagement")

    <div class="right_container">
        <div class="filtered_rooms_container">
            <div class="therapiesList_table_list">
                <div class="title_area">
                    <h2 class="text-white">Operations Configuration</h2>
                </div>
                <div class="card">
                    <div class="card-body">
                        <p class="text-muted mb-4">
                            Configure system-wide settings including logo, email settings, and feedback module content.
                        </p>

                        <!-- Tabs Navigation -->
                        <ul class="nav nav-tabs mb-4" id="operationsTabs" role="tablist">
                            <li class="nav-item" role="presentation">
                                <button class="nav-link active" id="logo-tab" data-bs-toggle="tab" data-bs-target="#logo" type="button" role="tab" aria-controls="logo" aria-selected="true">
                                    <i class="bi bi-image"></i> Logo
                                </button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="email-tab" data-bs-toggle="tab" data-bs-target="#email" type="button" role="tab" aria-controls="email" aria-selected="false">
                                    <i class="bi bi-envelope"></i> Email
                                </button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="feedback-tab" data-bs-toggle="tab" data-bs-target="#feedback" type="button" role="tab" aria-controls="feedback" aria-selected="false">
                                    <i class="bi bi-chat-left-text"></i> Feedback
                                </button>
                            </li>
                        </ul>

                        <!-- Tabs Content -->
                        <div class="tab-content" id="operationsTabsContent">
                            <!-- Logo Tab -->
                            <div class="tab-pane fade show active" id="logo" role="tabpanel" aria-labelledby="logo-tab">
                                <form id="LogoForm" class="general_form" enctype="multipart/form-data" novalidate>
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" id="LogoId" name="Id" value="@Model?.Id" />
                                    <input type="hidden" id="LogoFilePath" name="LogoFilePath" value="@Model?.LogoFilePath" />

                                    <div class="row">
                                        <div class="form-group col-md-12 mb-3">
                                            <label class="form-label">Project Logo</label>
                                            <input type="file" id="LogoFile" name="LogoFile" class="form-control" accept="image/*" />
                                            <small class="form-text text-muted">Upload project logo (JPG, JPEG, PNG, GIF, WEBP).</small>
                                            <div id="logoPreview" class="mt-3 @(string.IsNullOrWhiteSpace(Model?.LogoFilePath) ? "d-none" : string.Empty)">
                                                <img id="logoPreviewImg" src="@(string.IsNullOrWhiteSpace(Model?.LogoFilePath) ? "#" : Url.Content(Model!.LogoFilePath))" alt="Logo Preview" class="logo-preview-img" style="max-width: 300px; max-height: 150px; object-fit: contain; border: 1px solid #ddd; border-radius: 4px; padding: 10px; background-color: #f9f9f9;" />
                                            </div>
                                        </div>
                                    </div>

                                    <div class="text-end mt-4">
                                        <button type="button" class="btn btn-secondary me-2" id="btnResetLogo">Reset</button>
                                        <button type="submit" class="btn btn-primary">Save Logo</button>
                                    </div>
                                </form>
                            </div>

                            <!-- Email Tab -->
                            <div class="tab-pane fade" id="email" role="tabpanel" aria-labelledby="email-tab">
                                <form id="EmailForm" class="general_form" novalidate>
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" id="EmailId" name="Id" value="@Model?.Id" />

                                    <div class="row">
                                        <div class="form-group col-md-6 mb-3">
                                            <label class="form-label" for="SmtpServer">SMTP Server</label>
                                            <input type="text" id="SmtpServer" name="SmtpServer" class="form-control" value="@Model?.SmtpServer" placeholder="smtp.gmail.com" />
                                            <small class="form-text text-muted">SMTP server address</small>
                                        </div>

                                        <div class="form-group col-md-6 mb-3">
                                            <label class="form-label" for="SmtpPort">SMTP Port</label>
                                            <input type="number" id="SmtpPort" name="SmtpPort" class="form-control" value="@Model?.SmtpPort" placeholder="587" />
                                            <small class="form-text text-muted">SMTP port (usually 587 for TLS or 465 for SSL)</small>
                                        </div>

                                        <div class="form-group col-md-6 mb-3">
                                            <label class="form-label" for="SmtpUsername">SMTP Username</label>
                                            <input type="text" id="SmtpUsername" name="SmtpUsername" class="form-control" value="@Model?.SmtpUsername" placeholder="your-email@gmail.com" />
                                            <small class="form-text text-muted">SMTP username/email</small>
                                        </div>

                                        <div class="form-group col-md-6 mb-3">
                                            <label class="form-label" for="SmtpPassword">SMTP Password</label>
                                            <input type="password" id="SmtpPassword" name="SmtpPassword" class="form-control" value="@Model?.SmtpPassword" placeholder="Your password" />
                                            <small class="form-text text-muted">SMTP password</small>
                                        </div>

                                        <div class="form-group col-md-6 mb-3">
                                            <label class="form-label" for="SmtpFromEmail">From Email</label>
                                            <input type="email" id="SmtpFromEmail" name="SmtpFromEmail" class="form-control" value="@Model?.SmtpFromEmail" placeholder="noreply@example.com" />
                                            <small class="form-text text-muted">From email address</small>
                                        </div>

                                        <div class="form-group col-md-6 mb-3">
                                            <label class="form-label" for="SmtpFromName">From Name</label>
                                            <input type="text" id="SmtpFromName" name="SmtpFromName" class="form-control" value="@Model?.SmtpFromName" placeholder="Your Company Name" />
                                            <small class="form-text text-muted">Display name for sender</small>
                                        </div>

                                        <div class="form-group col-md-12 mb-3">
                                            <div class="form-check">
                                                <input type="checkbox" id="SmtpEnableSsl" name="SmtpEnableSsl" class="form-check-input" @(Model?.SmtpEnableSsl == true ? "checked" : "") />
                                                <label class="form-check-label" for="SmtpEnableSsl">
                                                    Enable SSL/TLS
                                                </label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="text-end mt-4">
                                        <button type="button" class="btn btn-secondary me-2" id="btnResetEmail">Reset</button>
                                        <button type="submit" class="btn btn-primary">Save Email Settings</button>
                                    </div>
                                </form>
                            </div>

                            <!-- Feedback Tab -->
                            <div class="tab-pane fade" id="feedback" role="tabpanel" aria-labelledby="feedback-tab">
                                <form id="FeedbackForm" class="general_form" novalidate>
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" id="FeedbackId" name="Id" value="@Model?.Id" />

                                    <div class="row">
                                        <div class="col-md-12 mb-3">
                                            <p class="text-muted small">Configure the text content displayed on the first screen of the feedback module (/ReviewAndFeedbacks/Feedback/{Id})</p>
                                        </div>

                                        <div class="form-group col-md-12 mb-3">
                                            <label class="form-label" for="FeedbackWelcomeTitle">Welcome Title</label>
                                            <input type="text" id="FeedbackWelcomeTitle" name="FeedbackWelcomeTitle" class="form-control" value="@Model?.FeedbackWelcomeTitle" placeholder="Welcome" />
                                            <small class="form-text text-muted">Welcome title (e.g., "Welcome")</small>
                                        </div>

                                        <div class="form-group col-md-12 mb-3">
                                            <label class="form-label" for="FeedbackWelcomeMessage1">Welcome Message 1</label>
                                            <textarea id="FeedbackWelcomeMessage1" name="FeedbackWelcomeMessage1" rows="2" class="form-control" placeholder="Thank you for becoming a part of NAAD Wellness family">@Model?.FeedbackWelcomeMessage1</textarea>
                                            <small class="form-text text-muted">First welcome message</small>
                                        </div>

                                        <div class="form-group col-md-12 mb-3">
                                            <label class="form-label" for="FeedbackWelcomeMessage2">Welcome Message 2</label>
                                            <textarea id="FeedbackWelcomeMessage2" name="FeedbackWelcomeMessage2" rows="2" class="form-control" placeholder="We value your feedback & suggestions and it will help us immensely in enriching your experience at NAAD.">@Model?.FeedbackWelcomeMessage2</textarea>
                                            <small class="form-text text-muted">Second welcome message</small>
                                        </div>

                                        <div class="form-group col-md-12 mb-3">
                                            <label class="form-label" for="FeedbackWelcomeMessage3">Welcome Message 3</label>
                                            <textarea id="FeedbackWelcomeMessage3" name="FeedbackWelcomeMessage3" rows="2" class="form-control" placeholder="We want to know about your experience at NAAD...">@Model?.FeedbackWelcomeMessage3</textarea>
                                            <small class="form-text text-muted">Third welcome message</small>
                                        </div>
                                    </div>

                                    <div class="text-end mt-4">
                                        <button type="button" class="btn btn-secondary me-2" id="btnResetFeedback">Reset</button>
                                        <button type="submit" class="btn btn-primary">Save Feedback Content</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @Html.Partial("_bottomNavigation1")
</div>

@section Scripts {
    <script src="~/customjs/settings/Operations.js" asp-append-version="true"></script>
}

