@model GMS.Infrastructure.ViewModels.Rooms.HouseKeeperDashboardViewModel

<div id="hkCleanModalContainer">
    <div class="modal fade" id="hkCleanModal" tabindex="-1" aria-labelledby="hkCleanModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <div>
                        <p class="hk-eyebrow mb-1 text-uppercase">Room Cleaning Check-List</p>
                        <h5 class="modal-title" id="hkCleanModalLabel">Confirm cleaning actions</h5>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="hk-clean-summary d-flex flex-wrap justify-content-between mb-3">
                        <div>
                            <span class="hk-label text-uppercase d-block">Room</span>
                            <h4 class="mb-0" id="hkCleanRoomLabel">--</h4>
                        </div>
                        <div id="hkCleanWorkDateWrapper">
                            <span class="hk-label text-uppercase d-block">Work Date</span>
                            <span class="fw-semibold" id="hkCleanWorkDate">@Model.WorkDate.ToString("dd MMM yyyy")</span>
                        </div>
                    </div>

                    <div class="table-responsive hk-clean-modal-list">
                        <table class="table align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th style="width: 48px;">
                                        <span id="hkCleanSelectAllWrapper">
                                            <input class="form-check-input" type="checkbox" id="hkCleanSelectAll" />
                                        </span>
                                    </th>
                                    <th>Action Items</th>
                                </tr>
                            </thead>
                            <tbody id="hkCleanChecklistBody">
                                <tr>
                                    <td colspan="2" class="text-center text-muted py-4">Loading checklistâ€¦</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="alert alert-danger d-none mt-3" id="hkCleanChecklistError"></div>

                    <div class="row g-3 mt-1">
                        <div class="col-md-6">
                            <label class="hk-label text-uppercase">Reason</label>
                            <textarea class="form-control" id="hkCleanReason" rows="2"></textarea>
                        </div>
                        <div class="col-md-6">
                            <label class="hk-label text-uppercase">Comments (saved to assignment)</label>
                            <textarea class="form-control" id="hkCleanComments" rows="2"></textarea>
                        </div>
                    </div>

                    <div class="hk-clean-review-meta mt-3 d-none" id="hkCleanReviewMeta">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="hk-label text-uppercase mb-1">Reviewed By</label>
                                <p class="fw-semibold mb-0" id="hkCleanReviewedBy">--</p>
                            </div>
                            <div class="col-md-6">
                                <label class="hk-label text-uppercase mb-1">Reviewed Time</label>
                                <p class="fw-semibold mb-0" id="hkCleanReviewedOn">--</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-success" id="hkCleanSubmit">
                        <span class="default-label"><i class="bi bi-check2-circle me-1"></i> Complete</span>
                        <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

