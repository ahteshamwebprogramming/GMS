@model GMS.Infrastructure.ViewModels.Rooms.RoomHousekeepingDashboardViewModel
@using System.Text.Json
@using System.Linq
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Room Allocation - Housekeeping";
    var hasAlerts = Model.Alerts != null && Model.Alerts.Any();
}

<div class="admin_wrapper hk-dashboard">
    <partial name="_rooms/_leftNavigationRooms" />

    <div class="right_container">
        <div class="hk-global-alert" id="hkGlobalAlert" role="alert" @(hasAlerts ? "" : "hidden")>
            <strong>Heads up:</strong>
            <span id="hkGlobalAlertMessage">@((hasAlerts ? string.Join(". ", Model.Alerts!) : string.Empty))</span>
        </div>

        <div class="hk-header card mb-4">
            <div class="card-body">
                <div class="hk-header-top d-flex flex-column gap-3">
                    <div class="d-flex flex-column flex-lg-row align-items-lg-center justify-content-between gap-3">
                        <div>
                            <p class="hk-eyebrow mb-1 text-uppercase">Operations &amp; Housekeeping</p>
                            <h1 class="hk-title mb-0">Room Allocation â€“ Housekeeping</h1>
                        </div>
                        <div id="hkStatsContainer">
                            <partial name="_RoomAllocationStats" model="Model" />
                        </div>
                    </div>
                    <form method="get" class="hk-date-form d-flex flex-wrap align-items-center gap-2" id="hkDateForm">
                        <input type="hidden" name="workDate" id="hkWorkDate" value="@Model.WorkDate.ToString("yyyy-MM-dd")" />
                <button type="button" class="btn btn-primary hk-refresh-btn" id="hkRefreshBtn">
                            <i class="bi bi-arrow-repeat me-1"></i> Refresh Snapshot
                        </button>
                        <button type="button" class="btn btn-outline-secondary" id="hkExportBtn">
                            <i class="bi bi-box-arrow-down me-1"></i> Export Report
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="hk-sections-grid">
            <section class="hk-section card">
                <div class="hk-section-header d-flex justify-content-between align-items-center">
                    <div>
                        <p class="hk-eyebrow mb-1 text-uppercase">Housekeeping Team Overview</p>
                        <h2 class="hk-section-title m-0">Team Allocation</h2>
                    </div>
                    <button class="btn btn-sm btn-outline-primary hk-filter-toggle" data-bs-toggle="collapse" data-bs-target="#teamFilters" aria-expanded="false">
                        <i class="bi bi-sliders me-1"></i> Filters
                    </button>
                </div>
                <div class="collapse hk-filter-panel" id="teamFilters">
                    <div class="row g-2">
                        <div class="col-md-6">
                            <label class="hk-label text-uppercase">Search</label>
                            <input type="text" class="form-control" id="teamSearch" placeholder="Search by name or code">
                        </div>
                        <div class="col-md-6">
                            <label class="hk-label text-uppercase">Department</label>
                            <select class="form-select" id="teamDepartment">
                                <option value="">All Departments</option>
                                @if (Model.Departments != null)
                                {
                                    foreach (var dept in Model.Departments)
                                    {
                                        <option value="@dept.Name">@dept.Name</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <div class="hk-scroll-panel">
                    <div id="hkTeamCards">
                        <partial name="_RoomAllocationTeam" model="Model.Team" />
                    </div>
                </div>
                <div class="hk-empty-state mt-3 text-center" id="hkTeamEmpty" hidden>
                    <i class="bi bi-people fs-3 d-block mb-2"></i>
                    No team members match the applied filters.
                </div>
            </section>

            <section class="hk-section card">
                <div class="hk-section-header d-flex justify-content-between align-items-center">
                    <div>
                        <p class="hk-eyebrow mb-1 text-uppercase">Unassigned Rooms Queue</p>
                        <h2 class="hk-section-title m-0">Rooms Requiring Assignment</h2>
                    </div>
                    <button class="btn btn-sm btn-outline-primary hk-filter-toggle" data-bs-toggle="collapse" data-bs-target="#unassignedFilters" aria-expanded="false">
                        <i class="bi bi-sliders me-1"></i> Filters
                    </button>
                </div>
                <div class="collapse hk-filter-panel" id="unassignedFilters">
                    <div class="row g-2">
                        <div class="col-md-4">
                            <label class="hk-label text-uppercase">Room Number</label>
                            <input type="text" class="form-control" id="unassignedSearch" placeholder="Search room">
                        </div>
                        <div class="col-md-4">
                            <label class="hk-label text-uppercase">Room Type</label>
                            <select class="form-select" id="unassignedRoomType">
                                <option value="">All Types</option>
                                @foreach (var type in Model.RoomTypes ?? Enumerable.Empty<string>())
                                {
                                    <option value="@type">@type</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="hk-label text-uppercase">Status</label>
                            <select class="form-select" id="unassignedStatus">
                                <option value="">Any</option>
                                <option value="Empty">Empty</option>
                                <option value="Occupied">Occupied</option>
                                <option value="On Hold">On Hold</option>
                                <option value="Locked">Locked</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="hk-label text-uppercase">Tidy State</label>
                            <select class="form-select" id="unassignedTidy">
                                <option value="">Any</option>
                                <option value="Ready">Ready</option>
                                <option value="Untidy">Untidy</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="hk-scroll-panel">
                    <div id="hkUnassignedCards">
                        <partial name="_RoomAllocationUnassigned" model="Model.UnassignedRooms" />
                    </div>
                </div>
                <div class="hk-empty-state mt-3 text-center" id="hkUnassignedEmpty" hidden>
                    <i class="bi bi-door-open fs-3 d-block mb-2"></i>
                    No rooms match the current filters.
                </div>
            </section>
        </div>

        <section class="hk-section hk-lastsection card mt-4">
            <div class="hk-section-header d-flex justify-content-between align-items-center">
                <div>
                    <p class="hk-eyebrow mb-1 text-uppercase">Room Assignment Matrix</p>
                    <h2 class="hk-section-title m-0">Detailed Status</h2>
                </div>
                <button class="btn btn-sm btn-outline-primary hk-filter-toggle" data-bs-toggle="collapse" data-bs-target="#matrixFilters" aria-expanded="false">
                    <i class="bi bi-sliders me-1"></i> Filters
                </button>
            </div>
            <div class="collapse hk-filter-panel" id="matrixFilters">
                <div class="row g-2">
                    <div class="col-md-3">
                        <label class="hk-label text-uppercase">Room Number</label>
                        <input type="text" class="form-control" id="matrixRoomSearch" placeholder="Search room number">
                    </div>
                    <div class="col-md-3">
                        <label class="hk-label text-uppercase">Room Type</label>
                        <select class="form-select" id="matrixRoomType">
                            <option value="">Any</option>
                            @foreach (var type in Model.RoomTypes ?? Enumerable.Empty<string>())
                            {
                                <option value="@type">@type</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="hk-label text-uppercase">Assigned To</label>
                        <input type="text" class="form-control" id="matrixAssignedTo" placeholder="Associate name">
                    </div>
                    <div class="col-md-3">
                        <label class="hk-label text-uppercase">Status</label>
                        <select class="form-select" id="matrixStatus">
                            <option value="">Any</option>
                            @foreach (var status in Enum.GetNames(typeof(GMS.Infrastructure.ViewModels.Rooms.HousekeepingAssignmentStatus)))
                            {
                                if (string.Equals(status, nameof(GMS.Infrastructure.ViewModels.Rooms.HousekeepingAssignmentStatus.InProgress), StringComparison.OrdinalIgnoreCase))
                                {
                                    continue;
                                }
                                <option value="@status">@status</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
            <div class="table-responsive mt-3">
                        <table class="table align-middle" id="hkMatrixTable">
                    <thead class="table-light">
                        <tr>
                            <th>Room No.</th>
                            <th>Room Type</th>
                            <th>Occupancy</th>
                            <th>Assignment</th>
                            <th>Assigned To</th>
                            <th>Progress</th>
                            <th>Notes</th>
                        </tr>
                    </thead>
                            <tbody id="hkMatrixBody">
                                <partial name="_RoomAllocationMatrix" model="Model.AssignmentMatrix" />
                            </tbody>
                </table>
            </div>
            <div class="hk-empty-state mt-3 text-center" id="hkMatrixEmpty" hidden>
                <i class="bi bi-table fs-3 d-block mb-2"></i>
                No rows match the applied filters.
            </div>
        </section>
    </div>

    <partial name="_bottomNavigation1" />
</div>

<div class="modal fade" id="assignRoomsModal" tabindex="-1" aria-labelledby="assignRoomsLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <div>
                    <p class="hk-eyebrow mb-1 text-uppercase">Assign Rooms</p>
                    <h5 class="modal-title" id="assignRoomsLabel">Housekeeper Allocation</h5>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="hk-modal-worker-summary d-flex justify-content-between flex-wrap mb-3">
                    <div>
                        <div class="fw-bold" id="assignWorkerName"></div>
                        <div class="text-muted small" id="assignWorkerCode"></div>
                    </div>
                    <div>
                        <span class="hk-pill" id="assignWorkDate">@Model.WorkDate.ToString("dd-MMM-yyyy")</span>
                    </div>
                </div>
                <div class="alert alert-danger d-none" id="assignModalError"></div>
                <div class="hk-modal-toolbar d-flex flex-wrap gap-2 align-items-center mb-3">
                    <input type="text" class="form-control flex-grow-1" id="assignSearch" placeholder="Search room number">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="assignSelectAll">
                        <label class="form-check-label" for="assignSelectAll">Select All</label>
                    </div>
                </div>
                <div class="hk-modal-room-list" id="assignRoomList">
                    <div class="hk-empty-state text-center py-4" id="assignRoomEmpty">
                        <i class="bi bi-door-open fs-3 d-block mb-2"></i>
                        All rooms are currently assigned. Try refreshing the dashboard.
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="assignSubmitBtn">
                    <span class="default-label"><i class="bi bi-send me-1"></i> Assign Rooms</span>
                    <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                </button>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/rooms/roomHousekeepingDashboard.css" asp-append-version="true" />
}

@section Scripts {
    <script>
        window.hkDashboardModel = {
            workDate: '@Model.WorkDate.ToString("yyyy-MM-dd")',
            apiBase: '@Url.Content("~/api/RoomHousekeepingAPI")',
            initialUnassigned: @Html.Raw(JsonSerializer.Serialize(Model.UnassignedRooms)),
            initialMatrix: @Html.Raw(JsonSerializer.Serialize(Model.AssignmentMatrix)),
            initialTeam: @Html.Raw(JsonSerializer.Serialize(Model.Team))
        };
    </script>
    <script src="~/customjs/rooms/roomHousekeepingDashboard.js" asp-append-version="true"></script>
}

