@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, GMSCore
@model GMS.Infrastructure.ViewModels.ReviewAndFeedback.FeedbackViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Welcome - NAAD Wellness</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/assets/feedback/style.css">
</head>
<body>
    @Html.Partial("_reviewAndFeedback/_header")
    <div class="content-box">
        @{
            var operations = ViewBag.Operations as GMS.Infrastructure.Models.Masters.OperationsDTO;
            var welcomeTitle = !string.IsNullOrWhiteSpace(operations?.FeedbackWelcomeTitle) ? operations.FeedbackWelcomeTitle : "Welcome";
            var message1 = !string.IsNullOrWhiteSpace(operations?.FeedbackWelcomeMessage1) ? operations.FeedbackWelcomeMessage1 : "Thank you for becoming a part of NAAD Wellness family";
            var message2 = !string.IsNullOrWhiteSpace(operations?.FeedbackWelcomeMessage2) ? operations.FeedbackWelcomeMessage2 : "We value your feedback & suggestions and it will help us immensely in enriching your experience at NAAD.";
            var message3 = !string.IsNullOrWhiteSpace(operations?.FeedbackWelcomeMessage3) ? operations.FeedbackWelcomeMessage3 : "We want to know about your experience at NAAD...";
        }
        <h4>@welcomeTitle</h4>
        @if (!string.IsNullOrWhiteSpace(message1))
        {
            <p>@message1</p>
        }
        @if (!string.IsNullOrWhiteSpace(message2))
        {
            <p>@message2</p>
        }
        @if (!string.IsNullOrWhiteSpace(message3))
        {
            <p>@message3</p>
        }
        <a href="/ReviewAndFeedbacks/FeedbackLevel2/@Model?.GuestId" class="btn btn-custom mt-4">Next</a>
    </div>
    @Html.Partial("_reviewAndFeedback/_footer")
</body>
</html>
