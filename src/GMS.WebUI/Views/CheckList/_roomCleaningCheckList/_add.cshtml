@model GMS.Infrastructure.ViewModels.Masters.CheckListViewModel

<input type="button" id="btnOpenRoomCleaningCheckListPopup" style="display:none" data-bs-toggle="modal" data-bs-target="#addRoomCleaningCheckListPopup" />
<div class="modal fade" id="addRoomCleaningCheckListPopup" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Room Cleaning Checkpoints</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form class="general_form" id="AddCheckList">
                    <input type="hidden" name="ID" value="@Model?.TblCheckLists?.ID" dbCol />
                    <input type="hidden" name="ChecklistType" value="RoomCleaning" dbCol />
                    @* <div class="d-flex justify-content-between align-items-center"> *@
                    <div class=" mb-3 form-group">
                        <label class="form-label required">Action Items</label>
                        <textarea class="form-control requiredInput" name="Chklist" dbCol rows="2">@Model?.TblCheckLists?.Chklist</textarea>
                    </div>
                    @* </div> *@
                    <div class="row">
                        <div class="mb-3 form-group col-md-6">
                            <label class="form-label required">Is Mandatory</label>
                            @* <input type="checkbox" /> *@
                            <select class="form-control requiredInput" name="IsMandatory" dbCol asp-for="TblCheckLists.IsMandatory">
                                <option value="true">Yes</option>
                                <option value="false">No</option>
                            </select>
                        </div>
                        <div class=" mb-3 form-group  col-md-6" >
                            <label class="form-label required">Score</label>
                            <input type="number" max="10" min="0" class="form-control requiredInput" name="Score" dbCol asp-for="TblCheckLists.Score">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="AddCheckList('RoomCleaning')">Add Check List</button>
            </div>
        </div>
    </div>
</div>