@model GMS.Infrastructure.ViewModels.Masters.CheckListViewModel

<input type="button" id="btnOpenCheckInListPopup" style="display:none" data-bs-toggle="modal" data-bs-target="#addCheckInListPopup" />
<div class="modal fade" id="addCheckInListPopup" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add CheckIn List</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form class="general_form" id="AddCheckList">
                    <input type="hidden" name="ID" value="@Model?.TblCheckLists?.ID" dbCol />
                    <input type="hidden" name="ChecklistType" value="CheckOut" dbCol />
                    <div class="mb-3 form-group">
                        <label class="form-label required">Check List</label>
                        <input type="text" class="form-control requiredInput" name="Chklist" dbCol value="@Model?.TblCheckLists?.Chklist">
                    </div>
                    <div class="mb-3 form-group">
                        <label class="form-label required">Mandatory/Optional</label>
                        <select class="form-control requiredInput" name="IsMandatory" dbCol asp-for="TblCheckLists.IsMandatory">
                            <option value="false">Optional</option>
                            <option value="true">Madatory</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="AddCheckList('CheckOut')">Add Check List</button>
            </div>
        </div>
    </div>
</div>