<style>
    .filterArea {
        display: flex;
        justify-content: space-around;
        align-items: center;
        gap: 15px;
        background: #F2EAE0;
        padding: 20px;
        border-radius: 13px;
        /* margin-bottom: 15px; */
    }
</style>
<div class="filterArea">
    <div class="row" style="width:45%">
        <div class="col-md-6">
            <label for="month" class="form-label">Select Month</label>
            @{
                string selectedMonth = Model?.Date?.ToString("MM") ?? DateTime.Now.ToString("MM");
            }
            <select class="form-select" id="month" selectedattr="@selectedMonth"></select>
        </div>
        <div class="col-md-6">
            <label for="year" class="form-label">Select Year</label>
            @{
                string selectedYear = Model?.Date?.ToString("yyyy") ?? DateTime.Now.ToString("yyyy");
            }
            <select class="form-select" id="year" selectedattr="@selectedYear"></select>
        </div>
    </div>
</div>