@model GMS.Infrastructure.ViewModels.EHRMSLogin.WorkerMasterViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Ameneties";
}

<div class="admin_wrapper">
    @Html.Partial("_userManagement/_leftNavigationUserManagement")

    <!-- Modal -->

    <input type="button" id="btnOpenAddAmenitiesPopup" style="display:none" data-bs-toggle="modal" data-bs-target="#addAmenitiesPopup" />

    <div class="right_container">
        <!-- filtered rooms Start-->
        <div class="filtered_rooms_container">
            <div class="therapiesList_table_list">
                <div class="title_area">
                    <h2>Room Amenities</h2>
                    <div class="btn_add">
                        <a href="#" class="addNew_btn" onclick="AddPartialView(0)">Add New</a>
                    </div>
                </div>
                <div class="resposive_table">
                    <table class="table">
                        <thead class="table-dark">
                            <tr>
                                <th scope="col">First Name</th>
                                <th scope="col">Middle Name</th>
                                <th scope="col">Last Name</th>
                                <th scope="col" width="300">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                if (Model != null && Model.WorkerMasterList != null)
                                {
                                    foreach (var item in Model.WorkerMasterList)
                                    {
                                        <tr>
                                            <td scope="row">@item.FirstName</td>
                                            <td scope="row">@item.MiddleName</td>
                                            <td scope="row">@item.LastName</td>
                                            <td>
                                                <div class="actions_btns">
                                                    @{
                                                        <a href="#" class="trash" onclick="DeleteList(@item.WorkerID)"><i class="bi bi-trash-fill"></i></a>
                                                        <a href="#" onclick="AddPartialView(@item.WorkerID)" class="pencil ms-2"><i class="bi bi-pencil-fill"></i></a>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- filtered rooms end-->



    </div>
    @Html.Partial("_bottomNavigation1")
</div>

@section Scripts {
    <script src="~/customjs/Rooms/Amenities.js"></script>

    <script>
        $(document).ready(function () {
            $("table").DataTable();
        });
    </script>
}