@model GMS.Infrastructure.ViewModels.Masters.RoomTypeViewModel
<div class="modal fade" id="addRoomTypePopup" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add Room Type</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form class="general_form" id="AddRoomType">
                    <input type="hidden" name="Id" value="@Model?.RoomType?.Id" dbCol />
                    <div class="mb-3 form-group">
                        <label class="form-label required">Room Type</label>
                        <input type="text" class="form-control requiredInput" name="Rtype" dbCol value="@Model?.RoomType?.Rtype">
                    </div>
                    <div class="mb-3 form-group">
                        <label class="form-label required">Rank</label>
                        <input type="number" class="form-control requiredInput" name="RoomRank" dbCol value="@Model?.RoomType?.RoomRank">
                    </div>
                    <div class="mb-3 form-group">
                        <label class="form-label required">Remarks</label>
                        <textarea class="form-control requiredInput" name="Remarks" dbCol>@Model?.RoomType?.Remarks</textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="AddRoomType()">Add Task</button>
            </div>
        </div>
    </div>
</div>