@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Access Denied";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="bi bi-shield-lock-fill text-danger" style="font-size: 2.5rem;"></i>
                    </div>
                    <h3 class="mb-2">You do not have access to this tool.</h3>
                    <p class="text-muted mb-4">Please contact the administrator to request access.</p>
                    <form method="post" action="/Account/Logout" class="d-inline">
                        <button type="submit" class="btn btn-primary">Logout</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

