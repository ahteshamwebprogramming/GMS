@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, GMSCore
@model GMS.Infrastructure.ViewModels.Guests.MemberDetailsWithChild

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Index</title>
    <meta content="ie=edge" http-equiv="x-ua-compatible">
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1" name="viewport"><!-- Bootstrap CSS -->
    <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" > -->
    <link href="~/assets/css/main.css" rel="stylesheet">
    <link href="~/assets/css/responsive.css" rel="stylesheet">
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css" rel="stylesheet" type="text/css"><!-- Owl Stylesheets -->
    <link href="~/assets/carousel/owl.carousel.min.css" rel="stylesheet">
    <link href="~/assets/carousel/owl.theme.default.min.css" rel="stylesheet">
    <style type="text/css">
        .title {
            text-align: center;
            font-size: 30px;
            font-weight: 600;
            margin: 22px 0 10px 0;
            text-transform: uppercase;
        }

        .table td:nth-child(2n + 1) {
            font-weight: 700
        }

        .logo {
            text-align: center;
            padding: 20px 0
        }

        .table-striped > tbody > tr:nth-of-type(odd) {
            background: rgb(151 151 151 / 5%) !important;
        }
    </style>
</head>
<body style="font-size:12px;">

    <div class="printDiv_block">
        <div class="logo">
            <img src="~/img/logo.png" />
        </div>
        <div class="filtered_rooms_container">
            <div class="therapiesList_table_list">
                <h2 class="title"><span><small>Guest Registration Form</small></span></h2>
                <table class="table table-striped table-bordered">
                    <tbody>
                        <tr>
                            <td>NAAD Code</td>
                            <td colspan="5"><span id="lblref" style="color:Red;">@Model.UniqueNo</span></td>

                        </tr>
                        <tr>
                            <td width="120px">First Name Code</td>
                            <td>@Model.Fname</td>
                            <td>Middle name</td>
                            <td>@Model.Mname</td>
                            <td>Last name</td>
                            <td>@Model.Lname</td>
                        </tr>
                        <tr>
                            <td>Marital status</td>
                            <td>@(Model.MarStatus == "S" ? "Single" : Model.MarStatus == "M" ? "Married" : Model.MarStatus == "Se" ? "Separated" : Model.MarStatus == "D" ? "Divorce" : Model.MarStatus == "O" ? "Others" : "")</td>
                            <td>Birth date</td>
                            <td width="120px">@Model.Dob</td>
                            <td>Age</td>
                            <td>@Model.Age</td>
                        </tr>
                        <tr>
                            <td>Blood Group</td>
                            <td>@Model.BloodGroup</td>
                            <td>Occupation</td>
                            <td>@Model.Occupation</td>
                            <td>Sex</td>
                            <td>@Model.GenderName</td>
                        </tr>
                        <tr>
                            <td>Address 1</td>
                            <td colspan="5">@Model.Address1</td>

                        </tr>
                        <tr>
                            <td>Address 2</td>
                            <td colspan="5">@Model.Address2</td>

                        </tr>
                        <tr>
                            <td>Pin Code</td>
                            <td>@Model.Pincode</td>
                            <td>City</td>
                            <td>@Model.City</td>
                            <td>State</td>
                            <td>@Model.State</td>
                        </tr>
                        <tr>
                            <td>Country</td>
                            <td>@Model.Country</td>
                            <td>Home phone no</td>
                            <td>@Model.EmergencyNo</td>
                            <td>Mobile phone no</td>
                            <td>@Model.MobileNo</td>
                        </tr>
                        <tr>
                            <td>Preferred e-mail</td>
                            <td>@Model.Email</td>
                            <td>Preferred contact method</td>
                            <td>@(Model.ReferContact == "E" ? "Email" : Model.ReferContact == "H" ? "Phone" : Model.ReferContact == "M" ? "Post phone" : "")</td>
                            <td>May we add your e-mail to NAAD monthly newsletter blog?</td>
                            <td>@(Model.IsMonthlynewsletter?.ToLower() == "N" ? "No" : Model.IsMonthlynewsletter?.ToLower() == "no" ? "No" : Model.IsMonthlynewsletter?.ToLower() == "y" ? "Yes" : Model.IsMonthlynewsletter?.ToLower() == "yes" ? "Yes" : "")</td>
                        </tr>

                    </tbody>
                </table>
                <h2 class="title"><span><small>IN CASE OF EMERGENCY</small></span></h2>
                <table class="table table-striped table-bordered">
                    <tbody>
                        <tr>
                            <td>Name of local friend or relative:</td>
                            <td>Amit Gupta</td>
                            <td> Relationship to Guest</td>
                            <td>husband</td>
                            <td> phone no</td>
                            <td>9896217992</td>
                        </tr>
                    </tbody>
                </table>
                <h2 class="title"><span><small>Medical Insurance</small></span></h2>
                <table class="table table-striped table-bordered">
                    <tbody>
                        <tr>
                            <td>Name of the Policy Holder</td>
                            <td>Amit Gupta</td>
                            <td> Insurance Company Name</td>
                            <td>husband</td>
                            <td> Policy No</td>
                            <td>9896217992</td>
                        </tr>
                    </tbody>
                </table>
                <h2 class="title"><span><small>Details of the Stay</small></span></h2>
                <table class="table table-striped table-bordered">
                    <tbody>
                        <tr>
                            <td>Type of Room</td>
                            <td>Premium Luxury</td>
                            <td> How many days Stay</td>
                            <td>0</td>
                            <td> Any Specific Health Issues</td>
                            <td>0</td>
                        </tr>
                        <tr>
                            <td colspan="6">The above information is true to the best of my knowledge. I also understand that I am financially responsible for all charges.</td>

                        </tr>
                    </tbody>
                </table>




            </div>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" type="script">
            </script> <!-- javascript -->

