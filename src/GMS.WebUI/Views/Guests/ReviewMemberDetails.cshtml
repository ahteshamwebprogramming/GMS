@model GMS.Infrastructure.ViewModels.Guests.MemberDetailsWithChild
@{
    ViewData["Title"] = "Review Member Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/customcss/cstmprintpage.css" rel="stylesheet" />
<link href="~/CustomCSS/Guests/ReviewMemberDetails.css" rel="stylesheet" />
<div class="admin_wrapper">
    @Html.Partial("_ReviewMemberDetails/_leftNavigationReview")

    @* Content Sections *@
    <div class="right_container">
        <!-- filtered rooms Start-->
        <div class="filtered_rooms_container">
            <div class="therapiesList_table_list">
                @{
                    var section = ViewBag.Section ?? "Review";
                }

                @if (section != "Review" && section != "Documents" && section != "Schedules")
                {
                <div class="title_area">
                        <h2>@(section == "CaseSheet" ? "Case Sheet" : section == "DietChart" ? "Diet Chart" : section == "DoctorNotes" ? "Doctor's Note" : section == "DischargeSummary" ? "Discharge Summary" : section == "FollowUpSheet" ? "Follow Up Sheet" : section == "GuestEducation" ? "Guest Education" : section == "WellnessTherapist" ? "Wellness Therapist" : section == "WorkSheet" ? "Work Sheet" : section == "WellnessSchedule" ? "Wellness Schedule" : "")</h2>
                </div>
                <div class="top_title_name">
                        <div class="name_id">NAAD ID <span>@(Model?.RegistrationNumber ?? "N/A")</span></div>
                </div>
                }
                else if (section == "Documents")
                {
                    <div class="title_area">
                        <h2>Documents</h2>
                </div>
                    <div class="top_title_name">
                        <div class="name_id">NAAD ID <span>@(Model?.RegistrationNumber ?? "N/A")</span></div>
                                </div>
                }

                @if (section == "Review")
                {
                    @Html.Partial("_ReviewMemberDetails/_ReviewContent", Model)
                }
                else if (section == "Documents")
                {
                    @Html.Partial("_ReviewMemberDetails/_DocumentsContent", Model)
                }
                else if (section == "Schedules")
                {
                    @Html.Partial("_ReviewMemberDetails/_SchedulesContent", Model)
                }
                else if (section == "CaseSheet")
                {
                    @Html.Partial("_ReviewMemberDetails/_CaseSheetContent", Model)
                }
                else if (section == "DietChart")
                {
                    @Html.Partial("_ReviewMemberDetails/_DietChartContent", Model)
                }
                else if (section == "DoctorNotes")
                {
                    @Html.Partial("_ReviewMemberDetails/_DoctorNotesContent", Model)
                }
                else if (section == "DischargeSummary")
                {
                    @Html.Partial("_ReviewMemberDetails/_DischargeSummaryContent", Model)
                }
                else if (section == "FollowUpSheet")
                {
                    @Html.Partial("_ReviewMemberDetails/_FollowUpSheetContent", Model)
                }
                else if (section == "GuestEducation")
                {
                    @Html.Partial("_ReviewMemberDetails/_GuestEducationContent", Model)
                }
                else if (section == "WellnessTherapist")
                {
                    @Html.Partial("_ReviewMemberDetails/_WellnessTherapistContent", Model)
                }
                else if (section == "WorkSheet")
                {
                    @Html.Partial("_ReviewMemberDetails/_WorkSheetContent", Model)
                }
                else if (section == "WellnessSchedule")
                {
                    @Html.Partial("_ReviewMemberDetails/_WellnessScheduleContent", Model)
                }
                else
                {
                    @Html.Partial("_ReviewMemberDetails/_ReviewContent", Model)
                }

            </div>
        </div>
        <!-- filtered rooms end-->
    </div>
    @Html.Partial("_bottomNavigation1")
</div>
@section Scripts {
    <script src="~/CustomJS/Guests/ReviewMemberDetails.js"></script>
}
