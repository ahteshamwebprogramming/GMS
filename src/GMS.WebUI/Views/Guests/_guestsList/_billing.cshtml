<input type="button" id="btnBillingModal" style="display:none" data-bs-toggle="modal" data-bs-target="#BillingModal" value="button test" />
<div class="modal fade" id="BillingModal" tabindex="-1" aria-labelledby="BillingModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" style="width: 90%; max-width: 1200px;">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="BillingModalLabel">Billing</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @* Content container for switching between billing and settlement *@
                <div id="billingModalContent">
                @{
                    var grossAmountRow = Model?.BillingDataList?.FirstOrDefault(x => x.ServiceType == "GrossAmount");
                    var invoiceTo = !string.IsNullOrWhiteSpace(grossAmountRow?.BillingTo) ? grossAmountRow?.BillingTo : Model?.MembersWithAttributes?.CustomerName;
                    var invoiceMobile = !string.IsNullOrWhiteSpace(grossAmountRow?.BillingMobile) ? grossAmountRow?.BillingMobile : Model?.MembersWithAttributes?.MobileNo;
                    var invoiceEmail = !string.IsNullOrWhiteSpace(grossAmountRow?.BillingEmail) ? grossAmountRow?.BillingEmail : Model?.MembersWithAttributes?.Email;
                    var invoiceAddressLine1 = !string.IsNullOrWhiteSpace(grossAmountRow?.BillingAddressLine1) ? grossAmountRow?.BillingAddressLine1 : Model?.MembersWithAttributes?.Address1;
                    var invoiceAddressLine2 = !string.IsNullOrWhiteSpace(grossAmountRow?.BillingAddressLine2) ? grossAmountRow?.BillingAddressLine2 : Model?.MembersWithAttributes?.Address2;
                    var hasSavedBillingDetails = !string.IsNullOrWhiteSpace(grossAmountRow?.BillingTo) || !string.IsNullOrWhiteSpace(grossAmountRow?.BillingMobile) || !string.IsNullOrWhiteSpace(grossAmountRow?.BillingEmail) || !string.IsNullOrWhiteSpace(grossAmountRow?.BillingAddressLine1) || !string.IsNullOrWhiteSpace(grossAmountRow?.BillingAddressLine2);
                    var showBillingContact = hasSavedBillingDetails;
                }

                <div class="resposive_table review_table" style="background:#98c1d9">
                    <table class="table table-striped" style="margin-bottom:0px !important">
                        <tbody style="color:#000">
                            <tr>
                                <td>UHID <br /> <span class="headingInfo">#@Model?.MembersWithAttributes?.UHID </span> </td>
                                <td>Guest Name <br /><span class="headingInfo">@Model?.MembersWithAttributes?.CustomerName</span></td>
                                <td>Mobile No <br /> <span class="headingInfo">@Model?.MembersWithAttributes?.MobileNo</span></td>
                            </tr>
                            <tr>
                                <td class="no-border">Stay Dates <br /><span class="headingInfo">@Model?.MembersWithAttributes?.DateOfArrival?.ToString("dd MMM yyyy") - @Model?.MembersWithAttributes?.DateOfDepartment?.ToString("dd MMM yyyy")</span></td>
                                <td class="no-border">Room Type <br /><span class="headingInfo">@Model?.MembersWithAttributes?.RoomTypeName</span></td>
                                <td class="no-border">
                                    Status <br />
                                    @{
                                        if (Model != null && Model.AccountSettled == true)
                                        {
                                            // Check if settlement has debit note
                                            if (Model.SettlementDTO != null && Model.SettlementDTO.DebitAmount > 0 && !string.IsNullOrEmpty(Model.SettlementDTO.DebitNoteNumber))
                                            {
                                                // Check if debit note is approved
                                                bool isDebitNoteApproved = Model.SettlementDTO.DebitNoteIsApproved == true;
                                                string debitNoteNumber = Model.SettlementDTO.DebitNoteNumber ?? "";
                                                double debitAmount = Model.SettlementDTO.DebitAmount ?? 0;
                                                
                                                if (!isDebitNoteApproved)
                                                {
                                                    <span class="headingInfo">Settled with Debit of - @debitAmount.ToString("N2")<br />(@debitNoteNumber) <span style="color: red;">Pending for Approval</span></span>
                                                }
                                                else
                                                {
                                                    <span class="headingInfo">Settled - (@debitNoteNumber)</span>
                                                }
                                            }
                                            else
                                            {
                                                <span class="headingInfo">Settled</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="headingInfo">Pending</span>
                                        }
                                    }
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>



                <div class="billing-toggle-wrapper">
                    <a href="javascript:void(0)" class="mb-3 billing-toggle-link @(showBillingContact ? string.Empty : "collapsed")" id="toggleBillingDetails" aria-expanded="@(showBillingContact.ToString().ToLower())">
                        <i class="bi bi-receipt"></i>
                        <span>@(showBillingContact ? "Hide Bill To" : "Show Bill To")</span>
                    </a>
                </div>
                <div class="bill-to-card mb-4 mt-3 @(showBillingContact ? string.Empty : "d-none")" id="billingDetailsCard">
                    <div class="bill-to-header">
                        <div class="d-flex align-items-center gap-3">
                            <div class="bill-to-icon">
                                <i class="bi bi-person-lines-fill"></i>
                            </div>
                            <div>
                                <h6 class="bill-to-title mb-1">Bill To</h6>
                                <p class="bill-to-subtitle">Provide the contact information that should appear on the invoice.</p>
                            </div>
                        </div>
                        <span class="bill-to-tag">Invoice Contact</span>
                    </div>
                    <div class="bill-to-body">
                        <div class="row g-3">
                            <div class="col-12 col-md-6 col-xl-4">
                                <label class="form-label bill-to-label">Payer Name</label>
                                <input type="text" class="form-control" name="InvoiceTo" value="@invoiceTo" placeholder="Enter person or company name" />
                            </div>
                            <div class="col-12 col-md-6 col-xl-4">
                                <label class="form-label bill-to-label">Phone Number</label>
                                <input type="text" class="form-control" name="InvoiceMobile" value="@invoiceMobile" placeholder="Add a contact number" />
                            </div>
                            <div class="col-12 col-md-6 col-xl-4">
                                <label class="form-label bill-to-label">Email Address</label>
                                <input type="email" class="form-control" name="InvoiceEmail" value="@invoiceEmail" placeholder="name@example.com" />
                            </div>
                            <div class="col-12 col-md-6">
                                <label class="form-label bill-to-label">Billing Address</label>
                                <input type="text" class="form-control" name="InvoiceAddressLine1" value="@invoiceAddressLine1" placeholder="Street, building, or company" />
                            </div>
                            <div class="col-12 col-md-6">
                                <label class="form-label bill-to-label">Tax ID / GSTIN</label>
                                <input type="text" class="form-control" name="InvoiceAddressLine2" value="@invoiceAddressLine2" placeholder="Enter registered Tax ID or GSTIN" />
                            </div>
                        </div>
                    </div>
                </div>



                <div class="row">
                    <div class="col-md-12">
                        <table class="table" id="tblBillingAttributes">
                            <thead class="table-dark">
                                <tr>
                                    <th scope="col">Services</th>
                                    <th scope="col">Guest</th>
                                    <th scope="col" class="text-right">Price</th>
                                    <th scope="col" class="text-right">Count</th>
                                    <th scope="col" class="text-right">Discount</th>
                                    <th scope="col" class="text-right">Amount</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int guestIdPaxSno1 = Model?.MemberDetailsWithChildren?.OrderBy(x => x.PAXSno)?.FirstOrDefault()?.Id ?? Model?.MembersWithAttributes?.Id ?? 0;
                                    if (Model != null && Model.MemberDetailsWithChildren != null)
                                    {
                                        foreach (var guestsInRoom in Model.MemberDetailsWithChildren)
                                        {
                                            int guestId = guestsInRoom.Id;
                                            if (Model != null && Model.BillingDataList != null && Model.BillingDataList.Count(x => x.ServiceType == "RoomCharges" && x.GuestId == guestId) > 0)
                                            {
                                                var rec = Model?.BillingDataList.Where(x => x.ServiceType == "RoomCharges" && x.GuestId == guestId).FirstOrDefault();
                                                bool isConfirmed = rec?.Confirmed ?? false;
                                                if (isConfirmed)
                                                {
                                                    <tr class="cal trroomcharges" state="@Model?.MembersWithAttributes?.State" guestid="@guestId" recordid="@rec.Id">
                                                        <td class="services">Room Charges</td>
                                                        <td class="guest">
                                                            @guestsInRoom.CustomerName
                                                        </td>
                                                        <td class="price text-right">@rec?.Price</td>
                                                        <td class="count text-right">@(rec?.Count)</td>
                                                        <td class="discount fc-parent text-right">@rec?.Discount</td>
                                                        <td class="amount text-right"></td>
                                                        <td class="action" style="text-align:end"></td>
                                                    </tr>
                                                }
                                                else
                                                {
                                                    <tr class="cal bdb trroomcharges" state="@Model?.MembersWithAttributes?.State" guestid="@guestId" recordid="@rec.Id">
                                                        <td class="services">Room Charges</td>
                                                        <td class="guest">
                                                            @guestsInRoom.CustomerName
                                                        </td>
                                                        <td class="price text-right">@rec?.Price</td>
                                                        <td class="count text-right">@(guestsInRoom?.NoOfNights == 0 ? 1 : guestsInRoom?.NoOfNights)</td>
                                                        <td class="discount fc-paren text-right"><input type="number" class="form-control-c text-right" value="@rec?.Discount" /></td>
                                                        <td class="amount text-right"></td>
                                                        <td class="action text-right" style="text-align:end">
                                                            <i style="color:green; @((Model != null && Model.AccountSettled == true) ? "display:none" : "")" class="bi bi-check-lg" onclick="ConfirmBillingRecord(this)"></i>
                                                            @*<i style="color:red" class="bi bi-x-lg"></i>*@
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                            else
                                            {
                                                <tr class="cal bdb trroomcharges" state="@Model?.MembersWithAttributes?.State" guestid="@guestId" recordid="0">
                                                    <td class="services">Room Charges</td>
                                                    <td class="guest">
                                                        @guestsInRoom.CustomerName
                                                    </td>
                                                    <td class="price text-right">@guestsInRoom?.RoomPrice</td>
                                                    <td class="count text-right">@(guestsInRoom?.NoOfNights == 0 ? 1 : guestsInRoom?.NoOfNights)</td>
                                                    <td class="discount fc-parent text-right">
                                                        @{
                                                            if (guestsInRoom?.Id != guestIdPaxSno1)
                                                            {
                                                                <input type="number" class="form-control-c text-right" value="@guestsInRoom?.RoomPrice" />
                                                            }
                                                            else
                                                            {
                                                                <input type="number" class="form-control-c text-right" value="0" />
                                                            }
                                                        }

                                                    </td>
                                                    <td class="amount text-right"></td>
                                                    <td class="action text-right" style="text-align:end">
                                                        <i style="color:green; @((Model != null && Model.AccountSettled == true) ? "display:none" : "")" class="bi bi-check-lg" onclick="ConfirmBillingRecord(this)"></i>
                                                        @*<i style="color:red" class="bi bi-x-lg"></i>*@
                                                    </td>
                                                </tr>
                                            }
                                        }
                                        foreach (var guestsInRoom in Model.MemberDetailsWithChildren)
                                        {
                                            int guestId = guestsInRoom.Id;


                                            if (Model != null && Model.BillingDataList != null && Model.BillingDataList.Count(x => x.ServiceType == "PackageSystem" && x.GuestId == guestId) > 0)
                                            {
                                                var recList = Model?.BillingDataList.Where(x => x.ServiceType == "PackageSystem" && x.GuestId == guestId);
                                                foreach (var rec in recList)
                                                {
                                                    bool isConfirmed = rec?.Confirmed ?? false;
                                                    if (isConfirmed)
                                                    {
                                                        <tr class="cal trpackagesystem" guestid="@guestId" recordid="@rec?.Id">
                                                            <td class="services">
                                                                @rec?.ServiceName
                                                            </td>
                                                            <td class="guest">@(guestsInRoom.CustomerName)</td>
                                                            <td class="price text-right">@rec?.Price</td>
                                                            <td class="count text-right">@(rec?.Count)</td>
                                                            <td class="discount fc-parent text-right">@rec?.Discount</td>
                                                            <td class="amount text-right"></td>
                                                            <td class="action" style="text-align:end"></td>
                                                        </tr>
                                                    }
                                                    else
                                                    {
                                                        <tr class="cal bdb trpackagesystem" guestid="@guestId" recordid="@rec?.Id">
                                                            <td class="services">
                                                                <select class="selectSystem selectDB">
                                                                    <option>Select Service</option>
                                                                    @{
                                                                        if (Model != null && Model.Services != null)
                                                                        {
                                                                            foreach (var item in Model.Services)
                                                                            {
                                                                                if (item.Id == rec?.ServiceId)
                                                                                {
                                                                                    <option selected="selected" value="@item.Id" price="@item.Price">@item.Service</option>
                                                                                }
                                                                                else
                                                                                {
                                                                                    <option value="@item.Id" price="@item.Price">@item.Service</option>
                                                                                }
                                                                            }
                                                                        }
                                                                    }
                                                                </select>
                                                            </td>
                                                            <td class="guest">
                                                                <select class="selectDB">
                                                                    <option value="0">Select Guest</option>
                                                                    @{
                                                                        foreach (var guestinRoomForSelect in Model.MemberDetailsWithChildren)
                                                                        {
                                                                            if (guestinRoomForSelect.Id == guestsInRoom.Id)
                                                                            {
                                                                                <option selected="selected" value="@guestinRoomForSelect.Id">@guestinRoomForSelect.CustomerName</option>
                                                                            }
                                                                            else
                                                                            {
                                                                                <option value="@guestinRoomForSelect.Id">@guestinRoomForSelect.CustomerName</option>
                                                                            }
                                                                        }
                                                                    }
                                                                </select>
                                                            </td>
                                                            <td class="price text-right">@rec?.Price</td>
                                                            <td class="count text-right">@(guestsInRoom?.NoOfNights == 0 ? 1 : guestsInRoom?.NoOfNights)</td>
                                                            <td class="discount fc-parent text-right"><input type="number" class="form-control-c text-right" value="@rec?.Discount" /></td>
                                                            <td class="amount text-right"></td>
                                                            <td class="action text-right" style="text-align:end">
                                                                <i style="color:green; @((Model != null && Model.AccountSettled == true) ? "display:none" : "")" class="bi bi-check-lg" onclick="ConfirmBillingRecord(this)"></i>
                                                                @*<i style="color:red" class="bi bi-x-lg"></i>*@
                                                            </td>
                                                        </tr>
                                                    }
                                                }
                                            }
                                            else
                                            {
                                                <tr class="cal bdb trpackagesystem" guestid="@guestId" recordid="0">
                                                    <td class="services">
                                                        <select class="selectSystem selectDB">
                                                            <option>Select Service</option>
                                                            @{
                                                                if (Model != null && Model.Services != null)
                                                                {
                                                                    foreach (var item in Model.Services)
                                                                    {
                                                                        if (item.Id == Model?.MembersWithAttributes?.CatId)
                                                                        {
                                                                            <option selected="selected" value="@item.Id" price="@item.Price">@item.Service</option>
                                                                        }
                                                                        else
                                                                        {
                                                                            <option value="@item.Id" price="@item.Price">@item.Service</option>
                                                                        }
                                                                    }
                                                                }
                                                            }
                                                        </select>
                                                    </td>
                                                    <td class="guest">
                                                        <select class="selectDB">
                                                            <option value="0">Select Guest</option>
                                                            @{
                                                                foreach (var guestinRoomForSelect in Model.MemberDetailsWithChildren)
                                                                {
                                                                    if (guestinRoomForSelect.Id == guestsInRoom.Id)
                                                                    {
                                                                        <option selected="selected" value="@guestinRoomForSelect.Id">@guestinRoomForSelect.CustomerName</option>
                                                                    }
                                                                    else
                                                                    {
                                                                        <option value="@guestinRoomForSelect.Id">@guestinRoomForSelect.CustomerName</option>
                                                                    }
                                                                }
                                                            }
                                                        </select>
                                                    </td>
                                                    <td class="price text-right">@Model?.MembersWithAttributes?.PackagePrice</td>
                                                    <td class="count text-right">@(guestsInRoom?.NoOfNights == 0 ? 1 : guestsInRoom?.NoOfNights)</td>
                                                    <td class="discount fc-parent  text-right"><input type="number" class="form-control-c text-right" value="0" /></td>
                                                    <td class="amount text-right"></td>
                                                    <td class="action text-right" style="text-align:end">

                                                        <i style="color:green; @((Model != null && Model.AccountSettled == true) ? "display:none" : "")" class="bi bi-check-lg" onclick="ConfirmBillingRecord(this)"></i>
                                                        @*<i style="color:red" class="bi bi-x-lg"></i>*@
                                                    </td>
                                                </tr>
                                            }

                                            var cstmBilling = Model?.BillingDataList?.Where(x => (x.ServiceType == "Package" || x.ServiceType == "Service") && x.GuestId == guestId);
                                            if (cstmBilling != null)
                                            {
                                                foreach (var billing in cstmBilling)
                                                {
                                                    if (billing.ServiceType == "Service")
                                                    {
                                                        bool isConfirmed = billing.Confirmed ?? false;
                                                        <tr id="pkg" class="cal @(isConfirmed ? "" : "bdb") trservices" guestid="@guestId" recordid="@billing.Id">
                                                            @{
