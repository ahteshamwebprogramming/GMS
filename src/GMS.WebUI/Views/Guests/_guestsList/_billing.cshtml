@model GMS.Infrastructure.ViewModels.Guests.GuestsListViewModel
<style>

    .error-message {
        color: red;
        font-size: 12px;
        margin-top: 4px;
    }


    .clickabel-icon {
        cursor: pointer;
        transition: transform .2s; /* Animation */
    }

        .clickabel-icon:hover {
            transform: scale(1.5); /* (150% zoom - Note: if the zoom is too large, it will go outside of the viewport) */
            cursor: pointer;
        }

    .fc-parent {
        padding: 3px .5rem !important;
    }

    .discount {
        text-align: right;
    }

    .form-control-c {
        float: right;
    }

    .form-control-c {
        background-color: #fff;
        background-clip: padding-box;
        border: 1px solid #ced4da;
        display: block;
        padding: 3.375px 0.75rem !important;
        appearance: none;
        border-radius: .375rem;
        transition: border-color .15s ease-in-out, box-shadow .15s ease-in-out;
    }

    .text-right {
        text-align: right
    }

    * {
        box-sizing: border-box;
        font-family: Arial, sans-serif;
    }

    body {
        font-family: Arial, sans-serif;
        font-size: 14px;
        margin: 0;
        color: #333;
        background: #FFF2EB;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    .invoice-header {
        background-color: #005670;
        color: #fff;
        padding: 20px;
        position: relative;
        -webkit-print-color-adjust: exact;
        print-color-adjust: exact;
    }

        .invoice-header h1 {
            margin: 0;
            font-size: 32px;
        }

    .company-info {
        font-size: 14px;
        margin-top: 10px;
    }

        .company-info span {
            display: block;
        }

    .section {
        padding: 15px;
    }

    .section-title {
        font-weight: bold;
        margin-bottom: 10px;
    }

    .info-table td {
        padding: 4px 8px;
        vertical-align: top;
    }

    .payment-details {
        color: #d9534f;
        font-size: 13px;
    }

        .payment-details span {
            display: block;
        }

    .data-table th {
        background-color: #005670;
        color: #fff;
        padding: 8px;
        border: 1px solid #ccc;
        -webkit-print-color-adjust: exact;
        print-color-adjust: exact;
    }

    .data-table td {
        padding: 8px;
        border: 1px solid #ccc;
    }

    .totals td {
        padding: 8px;
        font-weight: bold;
    }

    .footer {
        background-color: #005670;
        color: #ffcc00;
        text-align: center;
        padding: 20px;
        font-size: 18px;
        -webkit-print-color-adjust: exact;
        print-color-adjust: exact;
    }

    .section td {
        padding: 20px;
    }

    /* PAID Ribbon */
    .paid-ribbon {
        position: absolute;
        top: 10px;
        right: -50px;
        background: #28a745;
        color: white;
        padding: 12px 58px;
        font-size: 28px;
        font-weight: bold;
        transform: rotate(45deg);
        -webkit-print-color-adjust: exact;
        print-color-adjust: exact;
        z-index: 999;
        box-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
    }

    /* PAID Ribbon */
    .unpaid-ribbon {
        position: absolute;
        top: 10px;
        right: -50px;
        background: red;
        color: white;
        padding: 12px 58px;
        font-size: 28px;
        font-weight: bold;
        transform: rotate(45deg);
        -webkit-print-color-adjust: exact;
        print-color-adjust: exact;
        z-index: 999;
        box-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
    }

    .headingInfo {
        color: dodgerblue !important
    }

    #tblBillingAttributes .bi-check-lg {
        margin-right: 10px;
    }

    .bill-to-card {
        background: linear-gradient(135deg, #f6fbff, #eef4ff);
        border: 1px solid rgba(0, 86, 112, 0.15);
        border-radius: 18px;
        padding: 1.5rem;
        box-shadow: 0 12px 30px rgba(0, 34, 51, 0.08);
    }

    .bill-to-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 1.5rem;
        flex-wrap: wrap;
        margin-bottom: 1.25rem;
    }

    .bill-to-icon {
        width: 54px;
        height: 54px;
        border-radius: 16px;
        background: rgba(0, 86, 112, 0.12);
        color: #005670;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.75rem;
    }

    .bill-to-title {
        font-size: 1.1rem;
        font-weight: 700;
        color: #00394a;
    }

    .bill-to-subtitle {
        margin-bottom: 0;
        color: #5c7380;
        font-size: 0.85rem;
    }

    .bill-to-tag {
        padding: 0.35rem 1.1rem;
        border-radius: 999px;
        border: 1px solid rgba(0, 86, 112, 0.2);
        background-color: #ffffff;
        color: #005670;
        font-weight: 600;
        font-size: 0.75rem;
        letter-spacing: 0.08em;
        text-transform: uppercase;
        white-space: nowrap;
    }

    .bill-to-label {
        font-weight: 600;
        color: #005670;
    }

    .bill-to-card .form-control {
        background-color: #ffffff;
        border: 1px solid rgba(0, 0, 0, 0.12);
        border-radius: 10px;
        padding: 0.45rem 0.75rem;
        font-size: 0.95rem;
        line-height: 1.4;
        transition: border-color 0.2s ease, box-shadow 0.2s ease;
    }

        .bill-to-card .form-control::placeholder {
            color: #8a9aa7;
            font-size: 0.85rem;
        }

        .bill-to-card .form-control:focus {
            border-color: #005670;
            box-shadow: 0 0 0 0.2rem rgba(0, 86, 112, 0.18);
        }

    .bill-to-card .form-text {
        color: #5c7380;
    }

    .bill-to-body {
        padding-top: 0.25rem;
    }

    .billing-toggle-wrapper {
        display: flex;
        justify-content: flex-end;
        margin-top: 1rem;
    }

    .billing-toggle-link {
        display: inline-flex;
        align-items: center;
        gap: 0.35rem;
        font-weight: 600;
        color: #d4af37;
        text-decoration: none;
        cursor: pointer;
    }

        .billing-toggle-link:hover {
            text-decoration: underline;
            color: #d4af37;
        }

    @@media (max-width: 575.98px) {
        .bill-to-header {
            flex-direction: column;
            align-items: flex-start;
        }

        .bill-to-tag {
            align-self: stretch;
            text-align: center;
        }
    }


