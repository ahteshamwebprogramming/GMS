@model GMS.Infrastructure.ViewModels.Guests.MemberDetailsWithChild
@using GMS.Infrastructure.ViewModels.Guests
@{
    Layout = null;
    var schedules = ViewBag.Schedules as List<GuestScheduleWithChild> ?? new List<GuestScheduleWithChild>();
    var filters = ViewBag.Filters as dynamic;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Guest Schedule - Print</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <style>
        @@media print {
            .no-print {
                display: none !important;
            }
            body {
                margin: 0;
                padding: 15px;
            }
            .print-header {
                page-break-after: avoid;
            }
            .schedule-table {
                page-break-inside: auto;
            }
            .schedule-table tr {
                page-break-inside: avoid;
                page-break-after: auto;
            }
            .date-group {
                page-break-inside: avoid;
            }
        }
        body {
            font-family: Arial, sans-serif;
            font-size: 12px;
        }
        .print-header {
            border-bottom: 2px solid #333;
            padding-bottom: 15px;
            margin-bottom: 20px;
        }
        .print-header h2 {
            margin: 0;
            font-size: 20px;
            font-weight: bold;
        }
        .print-header h3 {
            margin: 5px 0;
            font-size: 16px;
        }
        .guest-info {
            display: flex;
            justify-content: space-between;
            margin-top: 10px;
        }
        .guest-info-item {
            margin-right: 20px;
        }
        .schedule-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        .schedule-table th,
        .schedule-table td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        .schedule-table th {
            background-color: #f5f5f5;
            font-weight: bold;
        }
        .date-group-header {
            background-color: #e9ecef;
            font-weight: bold;
        }
        .print-button {
            margin: 20px 0;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="print-header">
            <h2>Guest Schedule</h2>
            <h3>@(Model?.CustomerName ?? "N/A")</h3>
            <div class="guest-info">
                <div class="guest-info-item">
                    <strong>UHID:</strong> @(Model?.UHID ?? "N/A")
                </div>
                <div class="guest-info-item">
                    <strong>Room:</strong>
                    @if (!string.IsNullOrEmpty(Model?.RoomTypeName))
                    {
                        <span>@Model.RoomTypeName</span>
                    }
                    @if (!string.IsNullOrEmpty(Model?.Service))
                    {
                        <span> | @Model.Service</span>
                    }
                    @if (!string.IsNullOrEmpty(Model?.RoomNumber))
                    {
                        <span> | @Model.RoomNumber</span>
                    }
                    @if (string.IsNullOrEmpty(Model?.RoomTypeName) && string.IsNullOrEmpty(Model?.Service) && string.IsNullOrEmpty(Model?.RoomNumber))
                    {
                        <span>N/A</span>
                    }
                </div>
                <div class="guest-info-item">
                    <strong>Stay Dates:</strong>
                    @if (Model?.DateOfArrival != null && Model?.DateOfDepartment != null)
                    {
                        <span>@Model.DateOfArrival.Value.ToString("dd/MMM/yyyy") - @Model.DateOfDepartment.Value.ToString("dd/MMM/yyyy")</span>
                    }
                    else if (Model?.DateOfArrival != null)
                    {
                        <span>@Model.DateOfArrival.Value.ToString("dd/MMM/yyyy")</span>
                    }
                </div>
            </div>
        </div>

        <div class="print-button no-print">
            <button class="btn btn-primary" onclick="window.print()">
                <i class="bi bi-printer"></i> Print
            </button>
        </div>

        <table class="schedule-table">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Task</th>
                    <th>Duration</th>
                    <th>Treatment Room</th>
                    <th>Healer 1</th>
                    <th>Healer 2</th>
                    <th>Healer 3</th>
                </tr>
            </thead>
            <tbody>
                @{
                    var groupedSchedules = schedules
                        .OrderBy(s => s.StartDateTime)
                        .GroupBy(s => s.StartDateTime.ToString("yyyy-MM-dd"))
                        .ToList();
                }
                @if (groupedSchedules.Any())
                {
                    @foreach (var dateGroup in groupedSchedules)
                    {
                        var firstEvent = dateGroup.First();
                        var dateStr = firstEvent.StartDateTime.ToString("dd-MMM-yyyy");
                        
                        @foreach (var schedule in dateGroup.OrderBy(s => s.StartDateTime))
                        {
                            var startDateTime = schedule.StartDateTime;
                            var endDateTime = schedule.EndDateTime;
                            var duration = endDateTime - startDateTime;
                            var durationText = "";
                            
                            if (duration.TotalHours < 1)
                            {
                                durationText = duration.Minutes + " min" + (duration.Minutes != 1 ? "s" : "");
                            }
                            else
                            {
                                if (duration.Minutes > 0)
                                {
                                    durationText = duration.Hours + "h " + duration.Minutes + "m";
                                }
                                else
                                {
                                    durationText = duration.Hours + " hour" + (duration.Hours != 1 ? "s" : "");
                                }
                            }

                            var timeRange = startDateTime.ToString("HH:mm") + " - " + endDateTime.ToString("HH:mm");
                            var taskName = schedule.TaskName ?? "-";
                            var resourceName = schedule.ResourceName ?? "-";
                            var therapist1 = schedule.EmployeeName1 ?? "-";
                            var therapist2 = schedule.EmployeeName2 ?? "-";
                            var therapist3 = schedule.EmployeeName3 ?? "-";
                            
                            <tr>
                                <td>@(schedule == dateGroup.First() ? dateStr : "")</td>
                                <td>@timeRange</td>
                                <td>@taskName</td>
                                <td>@durationText</td>
                                <td>@resourceName</td>
                                <td>@therapist1</td>
                                <td>@therapist2</td>
                                <td>@therapist3</td>
                            </tr>
                        }
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center">No schedules found</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
</body>
</html>

