@model GMS.Infrastructure.ViewModels.Guests.MemberDetailsWithChild

<link href="~/assets/calender/calendar.css" rel="stylesheet" asp-append-version="true" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
<link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.5/main.min.css" rel="stylesheet">
<link href="~/CustomCSS/Guests/SchedulesContent.css" rel="stylesheet" asp-append-version="true" />

<div class="schedules-container">
    <div class="guest-info-header mb-4">
        <div class="guest-header-main">
            <div class="guest-name-section">
                <h2 class="guest-uhid">@(Model?.UHID ?? "N/A")</h2>
                <h3 class="guest-name">@Model?.CustomerName</h3>
                @* 
                    Check-in/Check-out logic:
                    - DateOfArrival: Uses RoomAllocation.CheckInDate if available, otherwise MembersDetails.DateOfArrival
                    - DateOfDepartment: Uses RoomAllocation.CheckOutDate if available, otherwise MembersDetails.DateOfDepartment
                *@
                <div class="guest-dates">
                    @if (Model?.DateOfArrival != null && Model?.DateOfDepartment != null)
                    {
                        <span class="date-badge">
                            <i class="bi bi-clock"></i> 
                            <strong>Check-in:</strong> @Model.DateOfArrival.Value.ToString("dd/MMM/yyyy hh:mm tt")
                        </span>
                        <span class="date-badge ms-2">
                            <i class="bi bi-clock-history"></i> 
                            <strong>Check-out:</strong> @Model.DateOfDepartment.Value.ToString("dd/MMM/yyyy hh:mm tt")
                        </span>
                    }
                    else if (Model?.DateOfArrival != null)
                    {
                        <span class="date-badge">
                            <i class="bi bi-clock"></i> 
                            <strong>Check-in:</strong> @Model.DateOfArrival.Value.ToString("dd/MMM/yyyy hh:mm tt")
                        </span>
                    }
                </div>
            </div>
            <div class="room-info-section">
                <div class="room-info-text">
                    @if (!string.IsNullOrEmpty(Model?.RoomTypeName))
                    {
                        <span class="room-type-text">
                            <i class="bi bi-door-open"></i> @Model.RoomTypeName
                        </span>
                    }
                    @if (!string.IsNullOrEmpty(Model?.Service))
                    {
                        <span class="room-separator">|</span>
                        <span class="package-text">
                            <i class="bi bi-box-seam"></i> @Model.Service
                        </span>
                    }
                    @if (!string.IsNullOrEmpty(Model?.RoomNumber))
                    {
                        <span class="room-separator">|</span>
                        <span class="room-number-text">
                            <i class="bi bi-door-closed"></i> @Model.RoomNumber
                        </span>
                    }
                </div>
            </div>
        </div>
    </div>

    <input type="hidden" id="guestCheckinDate" value="@Model?.DateOfArrival?.ToString("yyyy-MM-dd HH:mm")" />
    <input type="hidden" id="guestCheckoutDate" value="@Model?.DateOfDepartment?.ToString("yyyy-MM-dd HH:mm")" />
    <input type="hidden" id="GuestSchedule_GuestId" value="@Model?.Id" />

    @* Toolbar with Filters *@
    <div class="schedules-toolbar mb-3">
        <div class="d-flex flex-wrap align-items-end gap-2">
            <div class="filter-item">
                <label class="form-label small">From Date</label>
                <input type="date" class="form-control form-control-sm" id="filterFromDate" />
            </div>
            <div class="filter-item">
                <label class="form-label small">To Date</label>
                <input type="date" class="form-control form-control-sm" id="filterToDate" />
            </div>
            <div class="filter-item">
                <label class="form-label small">Task</label>
                <select class="form-control form-control-sm" id="filterTaskId">
                    <option value="0">All Tasks</option>
                </select>
            </div>
            <div class="filter-item">
                <label class="form-label small">Healer</label>
                <select class="form-control form-control-sm" id="filterEmployeeId">
                    <option value="0">All Healers</option>
                </select>
            </div>
            <div class="filter-item">
                <label class="form-label small">Treatment Room</label>
                <select class="form-control form-control-sm" id="filterResourceId">
                    <option value="0">All Treatment Rooms</option>
                </select>
            </div>
            <div class="ms-auto">
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-sm btn-primary" id="btnCalendarView">
                        <i class="bi bi-calendar-event"></i> Calendar View
                    </button>
                    <button type="button" class="btn btn-sm btn-outline-primary" id="btnListView">
                        <i class="bi bi-list-ul"></i> List View
                    </button>
                    <button type="button" class="btn btn-sm btn-outline-secondary" id="btnPrint">
                        <i class="bi bi-printer"></i> Print
                    </button>
                    <button type="button" class="btn btn-sm btn-outline-success" id="btnDownloadExcel" title="Download Excel">
                        <i class="bi bi-file-earmark-spreadsheet"></i> Excel
                    </button>
                </div>
            </div>
        </div>
    </div>

    @* Calendar View Container *@
    <div id="calendarViewContainer" class="cal_box">
        <div id="calendar"></div>
    </div>

    @* List View Container *@
    <div id="listViewContainer" style="display: none;">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" id="schedulesListTable">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Task</th>
                        <th>Duration</th>
                        <th>Treatment Room</th>
                        <th>Healer 1</th>
                        <th>Healer 2</th>
                        <th>Healer 3</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody id="schedulesListTableBody">
                    <tr>
                        <td colspan="9" class="text-center">Loading schedules...</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

@*Day Events Modal (for "+more" link)*@
<div class="modal fade" id="dayEventsModal" tabindex="-1" aria-labelledby="dayEventsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="dayEventsModalLabel">
                    <i class="bi bi-calendar-event"></i> <span id="dayEventsModalDate"></span>
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Time</th>
                                <th>Task</th>
                                <th>Duration</th>
                                <th>Treatment Room</th>
                                <th>Healer 1</th>
                                <th>Healer 2</th>
                                <th>Healer 3</th>
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody id="dayEventsModalBody">
                            <tr>
                                <td colspan="8" class="text-center">Loading events...</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@*Create Event Modal*@
<div class="modal fade" id="crtevents" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add Service</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" asp-action="CreateEvent" asp-controller="Calendar" method="post" enctype="multipart/form-data" id="AddSchedule">
                    <div class="row" id="eventTitle">
                        <div class="col-4">
                            <label>Task Name</label>
                            <select class="form-control" name="TaskId" placeholder="Task Name" onchange="GetEmployeeByTaskId(this)">
                                <option value="0"></option>
                            </select>
                        </div>
                        <div class="col-4">
                            <label>Treatment Room</label>
                            <select class="form-control" name="ResourceId">
                                <option value="0"></option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4 mt-3">
                            <label>Healer 1</label>
                            <select class="form-control" name="EmployeeId1">
                                <option value="0"></option>
                            </select>
                        </div>
                        <div class="col-4 mt-3">
                            <label>Healer 2</label>
                            <select class="form-control" name="EmployeeId2">
                                <option value="0"></option>
                            </select>
                        </div>
                        <div class="col-4 mt-3">
                            <label>Healer 3</label>
                            <select class="form-control" name="EmployeeId3">
                                <option value="0"></option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6 col-lg-4 mt-3">
                            <label>Start Date</label>
                            <div class="form-group position-relative dateCalWrapper">
                                <input type="date" class="form-control time" id="StartDate" name="StartDate" placeholder="" />
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-4 mt-3">
                            <label>Start Time</label>
                            <div class="form-group position-relative dateCalWrapper">
                                <input type="time" class="form-control time" id="begintime" name="StartTime" placeholder="" />
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-4 mt-3">
                            <label>Duration</label>
                            <input id="durationPicker" type="text" placeholder="Select duration" class="form-control" name="Duration">
                            <input type="hidden" id="selectedDuration" />
                        </div>
                        <div class="col-sm-6 col-lg-4 mt-3">
                            <label>End Date</label>
                            <div class="form-group position-relative dateCalWrapper">
                                <input type="text" class="form-control time" id="EndDate" name="EndDate" placeholder="" readonly />
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-4 mt-3">
                            <label>End Time</label>
                            <div class="form-group">
                                <input type="time" class="form-control time" id="endtime" name="EndTime" placeholder="End Time" readonly />
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-4 mt-3" id="noOfDaysContainer">
                            <label>X</label>
                            <div class="form-group">
                                <input type="number" class="form-control" id="NoOfDays" name="NoOfDays" placeholder="" value="1" min="1" max="1" />
                            </div>
                        </div>
                    </div>
                    <input type="hidden" value="" name="ScheduleId" />
                </form>
            </div>
            <div class="modal-footer">
                <div id="modalFooterErrorMessage" class="text-danger me-auto" style="display: none;">
                    <i class="bi bi-exclamation-circle"></i> <span id="modalFooterErrorText"></span>
                </div>
                <button type="button" class="btn btn-danger me-auto" id="btnDelete" onclick="DeleteSchedule()" style="display: none;">
                    <i class="bi bi-trash"></i> Delete
                </button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="btnadd" onclick="CreateEvent()">Confirm</button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteConfirmModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteConfirmModalLabel">
                    <i class="bi bi-exclamation-triangle-fill"></i> Confirm Delete
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this schedule?</p>
                <p class="text-danger mb-0"><strong>This action cannot be undone.</strong></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="btnConfirmDelete">
                    <i class="bi bi-trash"></i> Delete
                </button>
            </div>
        </div>
    </div>
</div>

@* daterangepicker, flatpickr, and FullCalendar are already loaded in _Layout.cshtml *@
@* Create script tags with asp-append-version to generate versioned URLs, then read their src *@
<script src="~/assets/calender/calendar.js" asp-append-version="true" type="text/template" id="calendarJsTemplate"></script>
<script src="~/CustomJS/Guests/GuestSchedule.js" asp-append-version="true" type="text/template" id="guestScheduleJsTemplate"></script>
<script src="~/CustomJS/Guests/SchedulesFilters.js" asp-append-version="true" type="text/template" id="schedulesFiltersJsTemplate"></script>
<script src="~/CustomJS/Guests/SchedulesListView.js" asp-append-version="true" type="text/template" id="schedulesListViewJsTemplate"></script>
<script src="~/CustomJS/Guests/SchedulesContent.js" asp-append-version="true" type="text/template" id="schedulesContentJsTemplate"></script>

<script>
    // Wait for jQuery and all dependencies to be ready before loading scripts
    (function() {
        var scriptsLoaded = false;
        var maxRetries = 100; // 5 seconds max wait time (100 * 50ms)
        var retryCount = 0;

        function waitForDependencies(callback) {
            retryCount++;
            
            // Check if jQuery is available
            if (typeof jQuery === 'undefined' || typeof window.jQuery === 'undefined') {
                if (retryCount < maxRetries) {
                    setTimeout(function() { waitForDependencies(callback); }, 50);
                } else {
                    console.error('jQuery failed to load after maximum retries');
                }
                return;
            }

            // Check for FullCalendar (FullCalendar v6 exposes itself as window.FullCalendar)
            if (typeof window.FullCalendar === 'undefined' && typeof FullCalendar === 'undefined') {
                if (retryCount < maxRetries) {
                    setTimeout(function() { waitForDependencies(callback); }, 50);
                } else {
                    console.error('FullCalendar failed to load after maximum retries');
                }
                return;
            }

            // Check for moment.js (loaded in layout)
            if (typeof moment === 'undefined') {
                if (retryCount < maxRetries) {
                    setTimeout(function() { waitForDependencies(callback); }, 50);
                } else {
                    console.error('moment.js failed to load after maximum retries');
                }
                return;
            }

            // All dependencies are ready
            callback();
        }

        function loadScript(src, callback) {
            // Check if script is already loaded
            var scriptFileName = src.split('/').pop().split('?')[0];
            var existingScript = document.querySelector('script[src*="' + scriptFileName + '"]:not([type="text/template"])');
            if (existingScript && existingScript.src) {
                if (callback) callback();
                return;
            }

            var script = document.createElement('script');
            script.src = src;
            script.async = false;
            script.onload = callback || function() {};
            script.onerror = function() {
                console.error('Failed to load script: ' + src);
            };
            document.head.appendChild(script);
        }

        // Start waiting for dependencies
        waitForDependencies(function() {
            if (scriptsLoaded) return;
            scriptsLoaded = true;

            // Get versioned URLs from template script tags (these won't execute due to type="text/template")
            var calendarJs = document.getElementById('calendarJsTemplate').src;
            var guestScheduleJs = document.getElementById('guestScheduleJsTemplate').src;
            var schedulesFiltersJs = document.getElementById('schedulesFiltersJsTemplate').src;
            var schedulesListViewJs = document.getElementById('schedulesListViewJsTemplate').src;
            var schedulesContentJs = document.getElementById('schedulesContentJsTemplate').src;

            // Remove template script tags after reading URLs
            document.getElementById('calendarJsTemplate').remove();
            document.getElementById('guestScheduleJsTemplate').remove();
            document.getElementById('schedulesFiltersJsTemplate').remove();
            document.getElementById('schedulesListViewJsTemplate').remove();
            document.getElementById('schedulesContentJsTemplate').remove();

            // Load scripts sequentially after dependencies are confirmed
            loadScript(calendarJs, function() {
                loadScript(guestScheduleJs, function() {
                    loadScript(schedulesFiltersJs, function() {
                        loadScript(schedulesListViewJs, function() {
                            loadScript(schedulesContentJs, function() {
                                // All scripts loaded successfully
                                // Ensure calendar initializes even if DOMContentLoaded already fired
                                initializeCalendarIfNeeded();
                            });
                        });
                    });
                });
            });
        });

        // Function to initialize calendar if DOM is ready
        function initializeCalendarIfNeeded() {
            // Check if calendar element exists
            var calendarEl = document.getElementById('calendar');
            if (!calendarEl) {
                console.warn('Calendar element not found, waiting for DOM...');
                // If DOM not ready, wait for it
                if (document.readyState === 'loading') {
                    document.addEventListener('DOMContentLoaded', function() {
                        setTimeout(initializeCalendarIfNeeded, 100);
                    });
                } else {
                    // DOM is ready but element might not be rendered yet, retry
                    setTimeout(initializeCalendarIfNeeded, 100);
                }
                return;
            }

            // Check if calendar is already initialized
            if (window.globalCalendarInstance) {
                return; // Already initialized
            }

            // Trigger calendar initialization by dispatching a custom event
            // This will work even if DOMContentLoaded already fired
            var initEvent = new Event('initializeCalendar');
            document.dispatchEvent(initEvent);
        }
    })();
</script>
