@model GMS.Infrastructure.ViewModels.Masters.ResourceMasterViewModel
<div class="resposive_table">
    <table class="table">
        <thead class="table-dark">
            <tr>
                <th scope="col">Resource</th>
                <th scope="col">Department</th>                
                <th scope="col" width="300">Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                if (Model != null && Model.ResourceMasterWithChildren != null)
                {
                    foreach (var item in Model.ResourceMasterWithChildren)
                    {
                        <tr>
                            <td scope="row">@item.ResourceName</td>
                            <td>@item.RoleName</td>                            
                            <td>
                                <div class="actions_btns">
                                    @{
                                        if (item.IsActive == true)
                                        {
                                            <a href="#" class="pencil ms-2" onclick="ManageStatus(@item.Id,0)"><i class="bi bi-eye-fill"></i></a>
                                        }
                                        else
                                        {
                                            <a href="#" class="trash ms-2" onclick="ManageStatus(@item.Id,1)"><i class="bi bi-eye-slash-fill"></i></a>
                                        }
                                    }
                                    <a href="#" class="trash ms-2" onclick="DeleteList(@item.Id)"><i class="bi bi-trash-fill"></i></a>
                                    <a href="#" onclick="AddResourceMasterPartialView(@item.Id)" class="pencil ms-2"><i class="bi bi-pencil-fill"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
</div>